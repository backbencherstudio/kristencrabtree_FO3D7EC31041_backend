///////////////////////////////////////
//////// Home page////////////////// 
///////////////////////////////////////

model Quote {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  deleted_at DateTime?

  quote_author String?
  quote_text   String? @db.Text
  reason       String? @db.Text

  status Boolean? @default(true)

  user_id        String?
  user           User?           @relation(fields: [user_id], references: [id])
  quoteReactions QuoteReaction[]

  @@map("quotes")
}

model QuoteReaction {
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  userId  String
  qouteId String

  user  User  @relation(fields: [userId], references: [id])
  qoute Quote @relation(fields: [qouteId], references: [id])

  @@id([userId, qouteId])
}

enum JournalType {
  Text
  Audio
}

model Journel {
  id         String       @id @default(cuid())
  created_at DateTime     @default(now())
  updated_at DateTime     @default(now())
  deleted_at DateTime?
  type       JournalType?

  title String?
  body  String?  @db.Text
  audio String?
  tags  String[]

  user_id      String?
  user         User?         @relation(fields: [user_id], references: [id])
  likeJournels LikeJournel[]

  @@map("journels")
}

model LikeJournel {
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  userId    String
  journelId String

  user    User    @relation(fields: [userId], references: [id])
  journel Journel @relation(fields: [journelId], references: [id])

  @@id([userId, journelId])
}

enum MurmurationType {
  Text
  Image
  Audio
}

model Murmuration {
  id         String           @id @default(cuid())
  created_at DateTime         @default(now())
  updated_at DateTime         @updatedAt
  deleted_at DateTime?
  type       MurmurationType?
  title      String?
  user_id    String?
  user       User?            @relation(fields: [user_id], references: [id])

  text  String? @db.Text
  image String?
  audio String?

  shared_from_id String?
  shared_from    Murmuration?  @relation("MurmurationShares", fields: [shared_from_id], references: [id])
  shares         Murmuration[] @relation("MurmurationShares")

  comments         Comments[]
  murmurationLikes MurmurationLike[]

  @@map("murmurations")
}

model MurmurationLike {
  userId        String
  murmurationId String

  user        User        @relation(fields: [userId], references: [id])
  murmuration Murmuration @relation(fields: [murmurationId], references: [id])

  @@id([userId, murmurationId])
  @@index([murmurationId])
}

model Comments {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id])

  murmuration_id String?
  murmuration    Murmuration? @relation(fields: [murmuration_id], references: [id])

  reply_to_comment_id String?
  reply_to_comment    Comments? @relation("CommentReplies", fields: [reply_to_comment_id], references: [id])

  body         String?       @db.Text
  comments     Comments[]    @relation("CommentReplies")
  commentLikes CommentLike[]

  @@map("comments")
}

model CommentLike {
  userId    String
  commentId String

  user    User     @relation(fields: [userId], references: [id])
  comment Comments @relation(fields: [commentId], references: [id])

  @@id([userId, commentId])
  @@index([commentId])
}

model Meditation {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  meditation_name        String?
  meditation_description String?
  meditation_audio       String?
  duration               String?

  listeners           MeditationListener[]
  favoriteMeditations favoriteMeditation[]

  @@map("meditation")
}

model MeditationListener {
  userId       String
  meditationId String

  user       User       @relation(fields: [userId], references: [id])
  meditation Meditation @relation(fields: [meditationId], references: [id])

  @@id([userId, meditationId])
  @@index([meditationId])
}

model favoriteMeditation {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id])

  meditation_id String?
  meditation    Meditation? @relation(fields: [meditation_id], references: [id])

  @@map("favorite_meditation")
}

model Digs {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  title String

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id])

  layers       Layers[]
  digResponses DigResponse[]

  @@map("digs")
}

enum Type {
  Text
  Option
}

model Layers {
  id         String    @id @default(cuid())
  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  deleted_at DateTime?

  user_id String?
  user    User?   @relation(fields: [user_id], references: [id])

  dig_id String
  dig    Digs   @relation(fields: [dig_id], references: [id], onDelete: Cascade)

  question_name String?
  question_type Type?
  point         Int?
  question      String?

  options      String[]
  other        Boolean?
  other_text   String?
  text         String?
  digResponses DigResponse[]

  @@map("layers")
}

model DigResponse {
  id         String   @id @default(cuid())
  dig_id     String
  user_id    String
  layer_id   String
  response   String?
  is_correct Boolean?
  created_at DateTime @default(now())

  dig   Digs   @relation(fields: [dig_id], references: [id])
  layer Layers @relation(fields: [layer_id], references: [id])
}
